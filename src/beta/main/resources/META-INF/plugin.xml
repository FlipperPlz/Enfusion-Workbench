<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.flipperplz.enfusionWorkbench</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Enfusion Workbench</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor
            email="flipperplz@protonmail.com"
            url="https://www.github.com/FlipperPlz"
    >Open Source Software - FlipperPlz (Ryann)</vendor>

    <description>
        This plugin will act as a reasonable alternative to the workbench application that comes shipped with
        Bohemia Games running on the Enfusion engine. Currently, this plugin is heavily focused on DayZ Scripting
        and aims to make the learning and writing process as seamless and intuitive as possible without excluding
        features that people love in the Official versions of Enfusion Workbench.
    </description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup
            displayType="BALLOON"
            id="Enfusion-Workbench"
        />
        <fileType
            name="Param"
            implementationClass="com.flipperplz.enfusionWorkbench.languages.param.ParamFileType"
            language="Param"
            fileNamesCaseInsensitive="config.cpp"
            extensions="cpp;rvmat"
        />
        <lang.parserDefinition
            language="Param"
            implementationClass="com.flipperplz.enfusionWorkbench.languages.param.parser.ParamParserDefinition"
        />
        <lang.syntaxHighlighterFactory
            language="Param"
            implementationClass="com.flipperplz.enfusionWorkbench.languages.param.highlighting.ParamSyntaxHighlighterFactory"
        />

    </extensions>
</idea-plugin>