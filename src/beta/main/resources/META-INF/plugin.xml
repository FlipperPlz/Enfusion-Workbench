<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.flipperplz.enfusionWorkbench</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Enfusion Workbench</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor
            email="flipperplz@protonmail.com"
            url="https://www.github.com/FlipperPlz"
    >Open Source Software - FlipperPlz (Ryann)</vendor>

    <description>
        This plugin will act as a reasonable alternative to the workbench application that comes shipped with
        Bohemia Games running on the Enfusion engine. Currently, this plugin is heavily focused on DayZ Scripting
        and aims to make the learning and writing process as seamless and intuitive as possible without excluding
        features that people love in the Official versions of Enfusion Workbench.
    </description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action
            class="com.flipperplz.enfusionWorkbench.actions.ArchiveTestAction"
            description="Test archive"
            text="Test Archive"
        />
    </actions>

    <extensions defaultExtensionNs="com.intellij">
<!--        <notificationGroup-->
<!--            displayType="BALLOON"-->
<!--            id="Enfusion-Workbench"-->
<!--        />-->
        <fileType
            name="Param"
            implementationClass="com.flipperplz.enfusionWorkbench.vfs.param.ParamFileType"
            language="Param"
            fileNamesCaseInsensitive="config.cpp"
            extensions="cpp;rvmat"
        />

        <lang.parserDefinition
            language="Param"
            implementationClass="com.flipperplz.enfusionWorkbench.psi.languages.param.parser.ParamParserDefinition"
        />

        <lang.syntaxHighlighterFactory
            language="Param"
            implementationClass="com.flipperplz.enfusionWorkbench.psi.languages.param.highlighting.ParamSyntaxHighlighterFactory"
        />

        <virtualFileSystem
            key="pbo"
            implementationClass="com.flipperplz.enfusionWorkbench.vfs.pbo.impl.PboFileSystem"
            physical="true"
        />

        <fileType
            name="PBO"
            implementationClass="com.flipperplz.enfusionWorkbench.vfs.pbo.PboFileType"
            extensions="pbo;ebo;xbo;ifa"
        />

        <localInspection
            implementationClass="com.flipperplz.enfusionWorkbench.psi.languages.param.inspections.errors.textures.ParamIncorrectPowerInspection"
            groupName="Param"
            level="ERROR"
            language="Param"
            displayName="ParamIncorrectPower"
            enabledByDefault="true"
        />

        <localInspection
            implementationClass="com.flipperplz.enfusionWorkbench.psi.languages.param.inspections.errors.textures.ParamIncorrectFormatException"
            groupName="Param"
            level="ERROR"
            language="Param"
            displayName="ParamIncorrectFormat"
            enabledByDefault="true"
        />

    </extensions>
</idea-plugin>